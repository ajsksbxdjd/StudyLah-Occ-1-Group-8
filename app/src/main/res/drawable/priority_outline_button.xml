<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#698c56"/> <!-- Green Fill -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Default state (Unselected) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent -->
            <stroke android:width="2dp" android:color="#698c56"/> <!-- Green Border -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
