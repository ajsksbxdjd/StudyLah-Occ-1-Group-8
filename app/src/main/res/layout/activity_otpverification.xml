<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F1E4"
    tools:context=".OTPVerification">

    <EditText
        android:id="@+id/num1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/num1"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="217dp"
        android:layout_height="168dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/email_verified_outlined_interface_symbol_of_closed_envelope_back_icon_icons_com_57845" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"
        android:text="Verify Your Email Address"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="374dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/raleway_medium"
        android:text="We have sent a verification code to tola@gmail.com"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/num4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="44dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.193"
        app:layout_constraintStart_toEndOf="@+id/num3"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <EditText
        android:id="@+id/num3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/num2"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/raleway_medium"
        android:text="Didnâ€™t get the code?"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num1" />

    <TextView
        android:id="@+id/resendButton"
        android:layout_width="165dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:text="Click to resend."
        android:textColor="#698C56"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/num4" />

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="162dp"
        android:layout_height="68dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#698C56"
        android:fontFamily="@font/raleway_medium"
        android:text="Verify"
        android:textColorLink="#698C56"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toEndOf="@+id/cancelButton"
        app:layout_constraintTop_toBottomOf="@+id/resendButton" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="162dp"
        android:layout_height="68dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#F9F1E4"
        android:fontFamily="@font/raleway_medium"
        android:text="Cancel"
        android:textColor="#698C56"
        android:textColorLink="#698C56"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:strokeColor="#698C56"
        app:strokeWidth="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>