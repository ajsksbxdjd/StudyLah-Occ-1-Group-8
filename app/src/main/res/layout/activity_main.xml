<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F1E4"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/studyIcon"
        android:layout_width="232dp"
        android:layout_height="240dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/study_icon_600nw_718922410_removebg_preview" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/raleway_medium"
        android:text="Welcome to"
        android:textColor="#3B403C"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studyIcon" />

    <TextView
        android:id="@+id/StudyLah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/raleway_medium"
        android:text="StudyLah"
        android:textColor="#3B403C"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome" />

    <TextView
        android:id="@+id/description"
        android:layout_width="368dp"
        android:layout_height="169dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/raleway_medium"
        android:text="StudyLah is a fun and interactive app for SPM students! Be a Tutor to share your skills or a Student to get help with studies.  Explore the market place for resources and enjoy self-learning at your own pace â€“ all in one app!"
        android:textColor="#698C56"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StudyLah" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="393dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#698C56"
        android:fontFamily="@font/raleway_medium"
        android:text="Create an account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <Button
        android:id="@+id/loginTutor"
        android:layout_width="393dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F9F1E4"
        android:fontFamily="@font/raleway_medium"
        android:text="Log in as Tutor"
        android:textColor="#698C56"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createButton"
        app:strokeColor="#698C56"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/loginStudent"
        android:layout_width="393dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F9F1E4"
        android:fontFamily="@font/raleway_medium"
        android:text="Log in as Student"
        android:textColor="#698C56"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTutor"
        app:strokeColor="#698C56"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>