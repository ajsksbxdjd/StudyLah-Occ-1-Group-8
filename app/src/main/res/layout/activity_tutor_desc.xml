<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Toolbar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/primary_color"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Back Button"
            android:src="@drawable/back_button" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:radius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="627dp"
            android:background="@color/primary_color"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tutor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Tutor Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Title: Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/raleway_medium"
                android:text="Email:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tutor_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/raleway_medium"
                android:text="example@example.com"
                android:textSize="16sp" />

            <!-- Title: Registered on -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Registered on:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tutor_registration_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/raleway_medium"
                android:text="01 Jan 2023"
                android:textSize="16sp" />

            <!-- Title: University Graduated -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="University Graduated:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tutor_university"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/raleway_medium"
                android:text="University Name"
                android:textSize="16sp" />

            <!-- Title: Subjects -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Subjects:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tutor_subjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/raleway_medium"
                android:text="Mathematics, Science"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tutor_bio"
                android:layout_width="383dp"
                android:layout_height="209dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/subject_bg"
                android:fontFamily="@font/raleway_medium"
                android:padding="8dp"
                android:text="Hi! I'm a tutor from Ipoh, Perak..."
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BtnBookNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/primary_variant_color"
                android:fontFamily="@font/raleway_semibold"
                android:text="Book Now"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
